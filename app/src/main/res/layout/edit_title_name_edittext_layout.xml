<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_titleNameEditTextLinearLayout"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:gravity="left|center_vertical"
    android:layout_toRightOf="@+id/edit_titleStringTextViewLinearLayout"
    android:layout_alignTop="@+id/edit_titleStringTextViewLinearLayout">
    <EditText
        android:id="@+id/edit_titleNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkRed"
        android:textStyle="normal"
        android:background="@android:drawable/editbox_background">
    </EditText>
</LinearLayout>