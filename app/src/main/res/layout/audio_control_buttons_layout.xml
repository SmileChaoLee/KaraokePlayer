<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal|bottom">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">
        <include layout="@layout/volume_seekbar_layout" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparentDark">
            <ImageButton
                android:id="@+id/volumeImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/volume"
                android:background="@drawable/main_menuitem_background_color">
            </ImageButton>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="@color/transparentDark">
        <ImageButton
            android:id="@+id/previousMediaImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="0dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/previous_media_button_image"
            android:background="@drawable/main_menuitem_background_color">
        </ImageButton>
        <FrameLayout
            android:id="@+id/playPauseButtonFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="0dp">
            <ImageButton
                android:id="@+id/playMediaImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/play_media_button_image"
                android:background="@drawable/main_menuitem_background_color"
                android:visibility="visible">
            </ImageButton>
            <ImageButton
                android:id="@+id/pauseMediaImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/pause_media_button_image"
                android:background="@drawable/main_menuitem_background_color"
                android:visibility="gone">
            </ImageButton>
        </FrameLayout>
        <ImageButton
            android:id="@+id/replayMediaImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="0dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/replay_media_button_image"
            android:background="@drawable/main_menuitem_background_color">
        </ImageButton>
        <ImageButton
            android:id="@+id/stopMediaImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="0dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/stop_media_button_image"
            android:background="@drawable/main_menuitem_background_color">
        </ImageButton>
        <ImageButton
            android:id="@+id/nextMediaImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="0dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/next_media_button_image"
            android:background="@drawable/main_menuitem_background_color">
        </ImageButton>
    </LinearLayout>

</LinearLayout>