<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MyFavoritesFragment">

    <LinearLayout
        android:id="@+id/myListButtonLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/favoriteSelectAllButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_menuitem_background_color"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/select_all"
            android:layout_gravity="center"
            android:layout_marginEnd="10sp">
        </ImageButton>
        <ImageButton
            android:id="@+id/favoriteUnselectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_menuitem_background_color"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/unselect"
            android:layout_gravity="center"
            android:layout_marginEnd="10sp">
        </ImageButton>
        <ImageButton
            android:id="@+id/favoriteRefreshButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_menuitem_background_color"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/refresh"
            android:layout_gravity="center"
            android:layout_marginEnd="10sp">
        </ImageButton>
        <ImageButton
            android:id="@+id/favoritePlaySelectedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_menuitem_background_color"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/play_media_button_image"
            android:layout_gravity="center">
        </ImageButton>
        <Button
            android:id="@+id/favoriteEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/editString"
            app:textAllCaps="false"
            android:textStyle="normal"
            android:background="@drawable/main_menuitem_background_color"
            android:textColor="@android:color/black"
            android:layout_gravity="center">
        </Button>
        <Button
            android:id="@+id/favoriteAddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/addString"
            app:textAllCaps="false"
            android:textStyle="normal"
            android:background="@drawable/main_menuitem_background_color"
            android:textColor="@android:color/black"
            android:layout_gravity="center">
        </Button>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/myListButtonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>