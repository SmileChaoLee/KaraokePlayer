<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="5">

    <LinearLayout
        android:id="@+id/titleLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10">
        <TextView android:id="@+id/titleStringTextView"
            android:textScaleX="1.0"
            android:typeface="monospace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:text="@string/titleWithColonString"
            android:layout_weight="2" >
        </TextView>
        <TextView android:id="@+id/titleNameTextView"
            android:textScaleX="1.0"
            android:typeface="monospace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textStyle="normal"
            android:layout_weight="8" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filePathLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="10">
        <TextView android:id="@+id/filePathStringTextView"
            android:textScaleX="1.0"
            android:typeface="monospace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:text="@string/filePathWithColonString"
            android:layout_weight="2" >
        </TextView>
        <TextView android:id="@+id/filePathTextView"
            android:textScaleX="1.0"
            android:typeface="monospace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:textColor="@color/blue"
            android:textStyle="normal"
            android:layout_weight="8" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/audioTrackLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10">
        <TextView android:id="@+id/musicTrackStringTextView"
            android:textScaleX="1.0"
            android:typeface="monospace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:text="@string/musicTrackWithColonString"
            android:layout_weight="4" >
        </TextView>
        <TextView android:id="@+id/musicTrackTextView"
            android:textScaleX="1.0"
            android:typeface="monospace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textStyle="normal"
            android:layout_weight="1" >
        </TextView>
        <TextView android:id="@+id/musicChannelStringTextView"
            android:textScaleX="1.0"
            android:typeface="monospace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:text="@string/musicChannelWithColonString"
            android:layout_weight="4" >
        </TextView>
        <TextView android:id="@+id/musicChannelTextView"
            android:textScaleX="1.0"
            android:typeface="monospace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textStyle="normal"
            android:layout_weight="1" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/audioChannelLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10">
        <TextView android:id="@+id/vocalTrackStringTextView"
            android:textScaleX="1.0"
            android:typeface="monospace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:text="@string/vocalTrackWithColonString"
            android:layout_weight="4" >
        </TextView>
        <TextView android:id="@+id/vocalTrackTextView"
            android:textScaleX="1.0"
            android:typeface="monospace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textStyle="normal"
            android:layout_weight="1" >
        </TextView>
        <TextView android:id="@+id/vocalChannelStringTextView"
            android:textScaleX="1.0"
            android:typeface="monospace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:text="@string/vocalChannelWithColonString"
            android:layout_weight="4" >
        </TextView>
        <TextView android:id="@+id/vocalChannelTextView"
            android:textScaleX="1.0"
            android:typeface="monospace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textStyle="normal"
            android:layout_weight="1" >
        </TextView>
    </LinearLayout>

</LinearLayout>
